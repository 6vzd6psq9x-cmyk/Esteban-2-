[build]
  # No necesitamos un comando de construcción (build command) porque es HTML estático.
  command = ""
  
  # Directorio a publicar: la raíz del repositorio (donde está index.html).
  publish = "."

# REGLA DE REDIRECCIONAMIENTO CRUCIAL PARA SPAs (Single Page Applications)
# Esto indica que CUALQUIER ruta no encontrada ("/*") debe ser reescrita a /index.html.
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
